<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_barang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_rv_khaki"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/viewGambarBarang"
                android:layout_width="110dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_image_search"
                />
        </LinearLayout>
        <!--        List Data-->
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <!--           No hp-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/habibi"
                    android:paddingTop="10dp"
                    android:text="Nama "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/show_namabarang"
                    android:textColor="@color/black"
                    android:paddingTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:maxLength="2000"
                    android:fontFamily="@font/habibi"
                    android:textSize="16sp" />
            </LinearLayout>

            <!--           Alamat-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Harga "
                    android:fontFamily="@font/habibi"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/show_hargabarang"
                    android:layout_width="150dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:maxLength="2000"
                    android:fontFamily="@font/habibi"
                    android:textSize="16sp" />
            </LinearLayout>

            <!--           Nama Produk-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Expired "
                    android:fontFamily="@font/habibi"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/show_expired"
                    android:textColor="@color/black"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:maxLength="2000"
                    android:fontFamily="@font/habibi"
                    android:textSize="16sp" />
            </LinearLayout>

            <!--           Harga-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Stock "
                    android:fontFamily="@font/habibi"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/show_stockbarang"
                    android:layout_width="150dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:maxLength="2000"
                    android:fontFamily="@font/habibi"
                    android:textSize="16sp" />
            </LinearLayout>
            <!--           Tanggal Pe,belian-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deskripsi"
                    android:fontFamily="@font/habibi"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/show_deskripsi"
                    android:layout_width="150dp"
                    android:textColor="@color/black"
                    android:layout_height="70dp"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:maxLength="5000"
                    android:fontFamily="@font/habibi"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>